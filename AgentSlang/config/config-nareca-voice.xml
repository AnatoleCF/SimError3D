<project>
    <profile name="profile1" hostname="machine1">
        <scheduler>
            <port>1222</port>
            <timeout>100</timeout>
        </scheduler>

        <services>
            <service name="org.ib.service.cns.CNService">
                <port>1221</port>
                <config>cnsService.xml</config>
            </service>
            <service name="org.ib.service.topic.TopicService">
                <port>1220</port>
            </service>
        </services>

        <clients>
            <client name="org.ib.service.cns.CNClient">
                <host>127.0.0.1</host>
                <port>1221</port>
            </client>
            <client name="org.ib.service.topic.TopicClient">
                <host>machine1</host>
                <port>1220</port>
            </client>
        </clients>

        <components>
            <component name="org.ib.logger.LogComponent">
                <port>1231</port>
                <scheduler>machine1:1222</scheduler>
                <subscribe>org.agent.slang.inout.TerminalIOComponentHack.debug@machine1:1232</subscribe>
                <subscribe>org.agent.slang.out.cereproc.CereProcTTSComponent.debug@machine1:1233</subscribe>
            </component>

            <component name="org.agent.slang.inout.TerminalIOComponentHack">
                <port>1232</port>
                <scheduler>machine1:1222</scheduler>
                <publish>StringData.Text@text.data</publish>
                <subscribe>AudioData.Text@machine1:1233</subscribe>
                <inputFilename>/media/Data1/phdos/trunk/projects/emilie/melodie/scenario.txt</inputFilename>
                <audioCache>/media/Data1/phdos/trunk/projects/emilie/melodie/no-prosody-2/</audioCache>
            </component>

            <component name="org.agent.slang.out.cereproc.CereProcTTSComponent">
                <port>1233</port>
                <scheduler>machine1:1222</scheduler>
                <publish>AudioData.Text@voice.data</publish>
                <subscribe>StringData.Text@machine1:1232</subscribe>
                <!--<subscribe>StringData.Text@machine1:1234</subscribe>-->
                <voice>cerevoice_suzanne_3.0.8_22k.voice</voice>
                <licenseFile>license.lic</licenseFile>
            </component>
        </components>
    </profile>
</project>